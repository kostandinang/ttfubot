extends includes/layout.pug

block content
	//- Quick Stats
	.row.stats-container
		.col.s12.m6.l3
			.card(class='blue-grey darken-1')
				.card-content.white-text
					.card-title Registered
					h1= (data) ? data.stats.subscribed : 0 
					button.btn.blue-grey /users
		.col.s12.m6.l3
			.card(class='pink darken-2')
				.card-content.white-text
					.card-title Active Match
					h1= (data) ? data.stats.activeMatch : 'No'
					button.btn.pink /show
		.col.s12.m6.l3
			.card(class='light-green darken-3')
				.card-content.white-text
					.card-title Total Actions
					h1= (data) ? data.stats.subscribed : 0
					button.btn.green /log
		.col.s12.m6.l3
			.card(class='deep-orange darken-2')
				.card-content.white-text
					.card-title Last Update
					span= (data) ? data.stats.lastUpdate : new Date()
	//- Actions
	.row
		.col.s6
			.card(class='grey darken-4')
				.card-content.white-text
					.card-title Broadcast
					.row
						.input-field.col.s12
							textarea.materialize-textarea(type='text', id='bcastInput')
							label Broadcast a message for registered users
					button.btn.red.white-text(id='bcastBtn') /bcast	
		.col.s6(style='max-height: 200px; heght: auto')
			.card
				.card-content
					.card-title Logs
					hr
					pre= (data) ? data.logs : 'No active logs'
					button.btn.red.white-text /refresh	